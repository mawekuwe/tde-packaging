#! /usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include debian/cdbs/debian-qt-kde.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/rules/utils.mk

DEB_CONFIGURE_INCLUDEDIR := /opt/kde3/include/kde
DEB_CONFIGURE_MANDIR := /opt/kde3/share/man
DEB_CONFIGURE_PREFIX := /opt/kde3
DEB_CONFIGURE_INFODIR := /opt/kde3/share/info

cdbs_configure_flags := --with-qt-dir=/usr/share/qt3 --disable-rpath --with-xinerama $(cdbs_kde_enable_final) $(cdbs_kde_enable_debug)

DEB_KDE_APIDOX := yes

DEB_CONFIGURE_EXTRA_FLAGS := --prefix=/opt/kde3 --with-extra-libs=/opt/kde3/lib

DOC_HTML_PRUNE := kcontrol-kde3 kinfocenter-kde3 ktimer-kde3 kcharselect-kde3 ksim-kde3

DEB_DH_STRIP_ARGS  := --dbg-package=kdeutils-kde3-dbg

PACKAGES_WITH_LIBS := khexedit-kde3 klaptopdaemon-kde3 kmilo-kde3 kregexpeditor-kde3 ksim-kde3

DEB_DH_MAKESHLIBS_ARGS_khexedit-kde3		:= -V'khexedit-kde3 (>= 4:3.5.8-1)'
DEB_DH_MAKESHLIBS_ARGS_klaptopdaemon-kde3	:= -V'klaptopdaemon-kde3 (>= 4:3.5.8-1)'
DEB_DH_MAKESHLIBS_ARGS_kmilo-kde3		:= -V'kmilo-kde3 (>= 4:3.5.8-1)'
DEB_DH_MAKESHLIBS_ARGS_kregexpeditor-kde3	:= -V'kregexpeditor-kde3 (>= 4:3.5.8-1)'
DEB_DH_MAKESHLIBS_ARGS_ksim-kde3		:= -V'ksim-kde3 (>= 4:3.5.7-1)'

#shlibs_ver = 4:3.5.0-1
#$(foreach p,$(PACKAGES_WITH_LIBS),$(eval DEB_DH_MAKESHLIBS_ARGS_$(p) := -V'$(p) (>= $(shlibs_ver))'))

binary-install/superkaramba-kde3::
	rm -f debian/superkaramba/opt/kde3/share/doc/superkaramba/examples/globalMouse/xcursor.so
