#!/usr/bin/make -f

DEB_HOST_ARCH_OS=$(shell dpkg-architecture -qDEB_HOST_ARCH_OS)
DEB_HOST_ARCH=$(shell dpkg-architecture -qDEB_HOST_ARCH)

ifeq ($(DEB_HOST_ARCH),s390)
DONT_BUILD+= kwifimanager
endif
ifneq ($(DEB_HOST_ARCH_OS),linux)
DONT_BUILD+= kwifimanager kdnssd
endif
export DH_OPTIONS

# include debian/cdbs/buildvars.mk
include /usr/share/cdbs/1/rules/debhelper.mk
include debian/cdbs/debian-qt-kde.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/rules/utils.mk

DEB_CONFIGURE_INCLUDEDIR := /opt/kde3/include/tde
DEB_CONFIGURE_MANDIR := /opt/kde3/share/man
DEB_CONFIGURE_PREFIX := /opt/kde3
DEB_CONFIGURE_INFODIR := /opt/kde3/share/info

cdbs_configure_flags := --with-qt-dir=/usr/share/qt3 --disable-rpath --with-xinerama $(cdbs_kde_enable_final) $(cdbs_kde_enable_debug)

DEB_CONFIGURE_EXTRA_FLAGS := --prefix=/opt/kde3 --with-extra-libs=/opt/kde3/lib

DEB_DH_STRIP_ARGS  := --dbg-package=kdenetwork-kde3-dbg

PACKAGES_WITH_LIBS := librss1-kde3 kopete-kde3 ksirc-kde3 kwifimanager-kde3

DEB_DH_MAKESHLIBS_ARGS_librss1-kde3	:= -V'librss1-kde3 (>= 4:3.5.8-1)'
DEB_DH_MAKESHLIBS_ARGS_kopete-kde3	:= -V'kopete-kde3 (>= 4:3.5.8-1)'

#shlibs_ver = 4:3.5.0-1
#$(foreach p,$(PACKAGES_WITH_LIBS),$(eval DEB_DH_MAKESHLIBS_ARGS_$(p) := -V'$(p) (>= $(shlibs_ver))'))

DEB_FIXPERMS_EXCLUDE := opt/kde3/bin/kppp opt/kde3/bin/kppplogview \
	opt/kde3/etc/ppp/peers/kppp-options

DOC_HTML_PRUNE := kcontrol

binary-install/kppp-kde3::
	chown root:dip debian/kppp-kde3/opt/kde3/bin/kppp*
	chown root:dip debian/kppp-kde3/opt/kde3/etc/ppp/peers/kppp-options
	chmod 4754 debian/kppp-kde3/opt/kde3/bin/kppp
	chmod 0754 debian/kppp-kde3/opt/kde3/bin/kppplogview
	chmod 0640 debian/kppp-kde3/opt/kde3/etc/ppp/peers/kppp-options
