#! /usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include debian/cdbs/debian-qt-kde.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/rules/utils.mk

DEB_CONFIGURE_INCLUDEDIR := /opt/kde3/include/tde
DEB_CONFIGURE_MANDIR := /opt/kde3/share/man
DEB_CONFIGURE_PREFIX := /opt/kde3
DEB_CONFIGURE_INFODIR := /opt/kde3/share/info

cdbs_configure_flags := --with-qt-dir=/usr/share/qt3 --disable-rpath --with-xinerama $(cdbs_kde_enable_final) $(cdbs_kde_enable_debug)

DEB_CONFIGURE_EXTRA_FLAGS := \
	--enable-ksayit-audio-plugins --with-akode --prefix=/opt/kde3 \
	--with-extra-libs=/opt/kde3/lib

DEB_DH_STRIP_ARGS  := --dbg-package=kdeaccessibility-kde3-dbg

PACKAGES_WITH_LIBS := kttsd-kde3 ksayit-kde3

DEB_DH_MAKESHLIBS_ARGS_kttsd-kde3	:= -V'kttsd-kde3 (>= 4:3.5.8-1)'
DEB_DH_MAKESHLIBS_ARGS_ksayit-kde3	:= -V'ksayit-kde3 (>= 4:3.5.8-1)'

#shlibs_ver = 4:3.5.0
#$(foreach p,$(PACKAGES_WITH_LIBS),$(eval DEB_DH_MAKESHLIBS_ARGS_$(p) := -V'$(p) (>= $(shlibs_ver))'))
