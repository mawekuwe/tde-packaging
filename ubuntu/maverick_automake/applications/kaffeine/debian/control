Build-Depends: cdbs, debhelper (>= 5), kdelibs4-kde3-dev,
 libcdparanoia0-dev, libogg-dev, libxine-dev (>= 1.1.7), libxcb1-dev,
 libxtst-dev, libgstreamer0.10-dev, libgstreamer-plugins-base0.10-dev,
