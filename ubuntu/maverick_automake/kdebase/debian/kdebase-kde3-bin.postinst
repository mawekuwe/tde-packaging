#! /bin/sh

set -e

package_name=kdebase-kde3-bin

if [ -z "$package_name" ]; then
    print >&2 "Internal Error. Please report a bug."
    exit 1;
fi

case "$1" in
  configure)
	chmod +s /opt/kde3/bin/kcheckpass || true
    ;;
  abort-upgrade)
    ;;
  *) echo "$0: didn't understand being called with \`$1'" 1>&2
     exit 0;;
esac

exit 0
